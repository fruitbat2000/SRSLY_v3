.col1
	float:left;

.col2
	float:right;

#intro 
	margin:0 30px 50px 0;
	& h1.inline-title
		display:inline;
		line-height:1em;
		font-size-rem(4.8);
	& p 
		display:inline;
		font-size-rem(2.4);

.main-image 
	margin-bottom:50px;
	min-height:1px;
	clearfix();
	& .img1, & .img2, & .img3
		float:left;
		width:400px;
	& img
		width:390px;
		box-shadow:5px 5px 5px #999;

.csstransforms3d .main-image
	clearfix();
	& .img1, & .img2, & .img3
		position:relative;
		perspective(1350);
		height:338px;
		float:left;
	& .img2 img {
		rotate-Y(-20deg);
		left:-20px;
	}
	& img
		position:absolute;
		rotate-Y(20deg);
		width:415px;
		top:10px;
		box-shadow:5px 5px 5px #999;
.ie10 .main-image
	.img2
		img
			left:0px;


#skills
	background:#333333;
	color:#f2f1d4;
	font-family:"Quan-RoundedBold", Arial, sans-serif;
	padding:10px 15px 15px 15px;
	border-radius:7px;
	margin-right:30px;
	& h2, h3
		margin:0;

.feature-nav
	margin:0 0 50px 30px;;
	& li
		margin-bottom:5px;
		position:relative;
		clearfix();
		& a
			width:86%;
			display:block;
			text-align:right;
			height:80px;
			float:right;
			border-radius:7px;
			color:#f2f1d4;
			text-decoration:none;
			font-family:"Museo-300", Arial, sans-serif;
			font-size-rem(3.6);
			text-transform:uppercase;
			line-height:80px;
			padding-right:20px;
			&:hover
				color:#f2f1d4;
		&.first a, &.first span
			background:#098c7f;
		&.second a, &.second span
			background:#f28b39;
		&.third a, &.third span
			background:#c03f33;
		& span
			width:72px;
			height:72px;
			border-radius:40px;
			display:block;
			position:absolute;
			top:0;
			left:0;
			border:4px solid #f2f1d4;
			z-index:1;
			color:#f2f1d4;
			font-family:"Museo-700", Arial, sans-serif;
			font-size-rem(4.8);
			text-align:center;
			line-height:68px;

.no-borderradius .feature-nav li span
	height:80px;
	width:76px;
	border:none;
	border-right:4px solid #f2f1d4;

.twitter
	text-align:right;
	margin-left:30px;
	& h2
		width:auto;
		height:25px;
		background:#333333;
		angled-banner 45deg, transparent 250px, #333333 1px;
		color:#f2f1d4;
		padding:3px 10px 0 0;
		font-size-rem(2.2);
		line-height:1em;
		margin-bottom:5px;
	& p
		font-family:"Quan-RoundedLightOblique", Arial, sans-serif;




