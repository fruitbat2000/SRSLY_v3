.col1
	float:left;

.col2
	float:right;

#intro 
	margin-bottom:50px;
	& h1.inline-title
		display:inline;
		line-height:1em;
		font-size-rem(4.8);
	& p 
		display:inline;
		font-size-rem(2.4);

.main-image 
	margin-bottom:20px;
	min-height:1px;

#skills
	background:#333333;
	color:#f2f1d4;
	font-family:"Quan-RoundedBold", Arial, sans-serif;
	padding:10px 15px 15px 15px;
	border-radius:7px;
	& h2, h3
		margin:0;

.feature-nav
	margin-bottom:50px;
	& li
		margin-bottom:5px;
		position:relative;
		clearfix();
		& a
			width:86%;
			display:block;
			text-align:right;
			height:80px;
			float:right;
			border-radius:7px;
			color:#f2f1d4;
			text-decoration:none;
			font-family:"Museo-300", Arial, sans-serif;
			font-size-rem(3.6);
			text-transform:uppercase;
			line-height:80px;
			padding-right:20px;
			&:hover
				color:#f2f1d4;
		&.first a, &.first span
			background:#098c7f;
		&.second a, &.second span
			background:#f28b39;
		&.third a, &.third span
			background:#c03f33;
		& span
			width:72px;
			height:72px;
			border-radius:40px;
			display:block;
			position:absolute;
			top:0;
			left:0;
			border:4px solid #f2f1d4;
			z-index:1;
			color:#f2f1d4;
			font-family:"Museo-700", Arial, sans-serif;
			font-size-rem(4.8);
			text-align:center;
			line-height:68px;

.twitter
	text-align:right;
	& h2
		width:auto;
		height:25px;
		background:#333333;
		angled-banner 45deg, transparent 250px, #333333 1px;
		color:#f2f1d4;
		padding-right:10px;
		font-size-rem(2.2);
		line-height:1em;
		margin-bottom:5px;
	& p
		font-family:"Quan-RoundedLightOblique", Arial, sans-serif;




