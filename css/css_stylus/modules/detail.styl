.detail-view
	margin:30px 0 50px 0;
	a
		font-size-rem(2.4);
		display:block;
		margin-bottom:15px;
		text-decoration:none;
	.col1
		img
			box-shadow:5px 5px 5px #999;
			border:1px solid #999;
			border-radius:7px;
	.col2
		.project-details
			width:90%;
			float:right;
			p
				font-size-rem(2.2);
	#skills
		margin:30px 0 0 0;
		padding:15px;
#project-thumbs
	clearfix();
	position:relative;
	.slider
		position:absolute;
		height:155px;
		width:1000px;
		left:100px;
		overflow:hidden;
	a
		height:155px;
		line-height:155px;
		font-size-rem(20.5);
		text-decoration:none;
		font-family:'Museo 300', Arial, sans-serif;
		&.scroll-left
			float:left;
		&.scroll-right
			float:right;
			text-align:right;
	ul
		width:auto;
		white-space:nowrap;
		li
			display:inline-block;
			*display:inline;
			zoom:1;
			border-right:dashed 1px #333;
			&:last-child
				border-right:none;
			img
				width:180px;
				margin:10px;
				box-shadow:2px 2px 2px #999;
				opacity(0.5);
				&:hover {
					opacity(1);
					-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)";
				}
